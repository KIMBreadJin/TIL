<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.mapper.MemberMapper">
	<resultMap type="com.green.vo.MemberVO" id = "memberMap">
		<id property="userid" column="userid"/>
		<result property="userid" column="userid"/>
		<result property="userpw" column="userpw"/>
		<result property="username" column="username"/>
		<result property="regDate" column="regDate"/>
		<result property="updateDate" column="updateDate"/>
		<collection property="authList" resultMap="authMap"></collection>
	</resultMap>
	<resultMap type="com.green.vo.AuthVO" id = "authMap">
		<result property="userid" column="userid"/>
		<result property="auth" column="auth"/>
	</resultMap>
	<select id = "read" resultMap="memberMap">
		select
			mem.userid, userpw, username, regDate, updateDate, auth
				from tbl_member mem left outer join tbl_member_auth auth on mem.userid = auth.userid
			where mem.userid=#{userid}
	</select>
</mapper>